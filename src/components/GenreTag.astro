---
type Props = {
  genre: string;
  genreName?: string;
  href?: string;
};

const { genre, genreName, href } = Astro.props;
const displayName = genreName ?? genre;
---

{
  href ? (
    <a
      href={href}
      class="inline-block border border-border px-2 py-0.5 font-display text-xs font-semibold uppercase tracking-widest text-foreground/70 transition-colors hover:border-accent hover:text-accent"
    >
      {displayName}
    </a>
  ) : (
    <span class="inline-block border border-border px-2 py-0.5 font-display text-xs font-semibold uppercase tracking-widest text-foreground/60">
      {displayName}
    </span>
  )
}
